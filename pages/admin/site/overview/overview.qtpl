{% import "time" %}

{% func (p *Page) Title() %}{%s p.TranslatePlural("site") %}{% endfunc %}

{% func (p *Page) Content() %}{% stripspace %}
<main class="content">
    <h1>{%s p.TranslatePlural("site") %}</h1>
    {%s= p.actions.RenderOverviewActions() %}
    {%s= p.filter.RenderOverviewFilter(p.GetCoreContext()) %}
    {% if len(p.sites) > 0 %}
        <table>
            <thead>
                <tr>
                {% if p.canUpdate || p.canDelete %}
                    <th><input type="checkbox" name="check"></th>
                    <th></th>
                {% endif %}
                <th></th>
                {%s= p.filter.RenderOverviewColumnTableHeaders(p.GetCoreContext()) %}
            </tr>
            </thead>
            <tbody>
                {% for k := range p.sites %}
                    <tr>
                        {% if p.canUpdate || p.canDelete %}
                            <td><input type="checkbox" name="check" data-id="{%s p.sites[k].ID() %}"></td>
                            <td><a href="{%s p.AdminURL() %}/Site/Update?id={%s p.sites[k].ID() %}">âœŽ</a></td>
                        {% endif %}

                        <td><a href="{%s p.AdminURL() %}/Site/View?id={%s p.sites[k].ID() %}">{%s p.TranslatePlural("detail") %}</a></td>

                        {% for key := range p.filter.ColumnsInOrder() %}
                            <td>
                                {% switch key %}
                                {% case 0 %}
                                    {%s p.sites[k].ID() %}
                                {% case 1 %}
                                    {% if p.sites[k].Online() %}{%s p.Translate("yes_") %}{% else %}{%s p.Translate("no_") %}{% endif %}
                                {% case 2 %}
                                    <a href="{%s p.AdminURL() %}/User/View?id={%s p.sites[k].CreatedByID() %}">
                                        {%s p.rendererService.CreatedBy(p.sites[k], p.language.ID()) %}
                                    </a>
                                {% case 3 %}
                                    {%s p.sites[k].CreatedAt().Format(time.RFC3339[0:9]) %}
                                {% case 4 %}
                                    {% if p.sites[k].IsUpdated() %}
                                        <a href="{%s p.AdminURL() %}/User/View?id={%s *p.sites[k].UpdatedByID() %}">
                                            {%s p.rendererService.UpdatedBy(p.sites[k], p.language.ID()) %}
                                        </a>
                                    {% endif %}
                                {% case 5 %}
                                    {% if p.sites[k].UpdatedAt() != nil %}{%s p.sites[k].UpdatedAt().Format(time.RFC3339[0:9]) %}{% endif %}
                                {% case 6 %}
                                    {% if p.sites[k].LocalizedName() != nil %}{%s *p.sites[k].LocalizedName() %}{% endif %}  
                                {% case 7 %}
                                    {% if p.sites[k].Language() != nil %}
                                        {%s p.rendererService.LanguageName(*p.sites[k].Language(), p.language.ID()) %}
                                    {% endif %}
                                {% case 8 %}
                                    {% if p.sites[k].Country() != nil %}
                                        {%s p.rendererService.CountryName(*p.sites[k].Country(), p.language.ID()) %}
                                    {% endif %}
                                {% case 9 %}
                                    {%v p.sites[k].CurrenciesCount() %}
                                {% endswitch %}
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        {%s p.Translate("noResultsFound") %}
    {% endif %}
</main>
{% endstripspace %}{% endfunc %}

{% func (p *Page) Stylesheets() %}{% stripspace %}
{% if p.filter.ShouldShowSearch() %}
    <link rel="stylesheet" href="/c/a/f.css">
{% endif %}
{% endstripspace %}{% endfunc %}

{% func (p *Page) Javascripts() %}{% stripspace %}
{% if p.filter.ShouldShowSearch() %}
    <script src="/j/a/f.js"></script>
{% endif %}
{% if len(p.sites) > 0 %}
    <script src="/j/a/o.js"></script>
    {%s= p.rendererService.DefaultOverviewTranslations(p.GetCoreContext()) %}
{% endif %}
{% endstripspace %}{% endfunc %}
