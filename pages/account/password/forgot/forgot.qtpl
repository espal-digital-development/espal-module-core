{% func (p *Page) Stylesheets() %}<link rel="stylesheet" href="/c/simpleBox.css">{% endfunc %}

{% func (p *Page) Title() %}{%s p.Translate("forgotPassword") %}{% endfunc %}

{% func (p *Page) Content() %}{% stripspace %}
<div class="simpleBox">
    {%s= p.form.Errors() %}
    <h1>{%s p.Translate("forgotPassword") %}</h1>
    {%s= p.form.Open() %}
        {%s= p.form.Field("_uname") %}
        {%s= p.form.Field("_t") %}
        {%s= p.form.Field("email") %}<br>
        {%s= p.form.Field("repeatEmail") %}<br>
        <input type="submit" value="{%s p.Translate("mailMeTheLink") %}">
    </form>
</div>
{% endstripspace %}{% endfunc %}

{% func (p *Page) Javascripts() %}<script src="/j/form.js"></script>{% endfunc %}
